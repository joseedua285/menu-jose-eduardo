package proyectomenu;

import java.util.Scanner;

public class menuu {
	
	public static void main(String[] args) {
		
		//CREAR MENU DE BUFET
		
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("---Bienvenidos al Bufet cinco hermanos---");
		System.out.println("¿Que le gustaria comer");
		System.out.println("Como opciones del menu tenemos: \n1.- Huevos fritos $50 \n2.- Hotcakes $40 \n3.- consome de res $70 \n4.- Tacos  al pastor 5x $40"); //IMPRIMIMOS LAS OPCIONES DEL MENU
		int opcionComida = teclado.nextInt(); //INTRODUCIMOS POR TECLADO QUE OPCION QUEREMOS
		
		switch(opcionComida) {
		
		case 1 : System.out.println("Has elegido Huevos fritos para comer"); //PONEMOS CADA UNO DE LOS PASOS ELEGIDOS
		break;
		case 2 : System.out.println("Has elegido Hotcakes para comer");
		break;
		case 3 : System.out.println("Has elegido Consome de res para comer");
		break;
		case 4 : System.out.println("Has elegido Tacos de al pastor para comer");
		break;
		
		
		
		
		}
		
		
		System.out.println("¿Que deseas como Bebida?");
		System.out.println("Como primera Bebida tenemos: \n1.- zenzao $15 \n2.- cocacola $19 \n3.- vino tinto $250 Botella \n4.- Piña colada $56"); //IMPRIMIMOS LAS OPCIONES DEL MENU
		int opcionBebida = teclado.nextInt(); //INTRODUCIMOS POR TECLADO QUE OPCION QUEREMOS
		
        switch(opcionBebida) {
		
		case 1 : System.out.println("Has elegido zenzao para Beber"); //PONEMOS CADA UNO DE LOS PASOS ELEGIDOS
		break;
		case 2 : System.out.println("Has elegido cocacola para Beber");
		break;
		case 3 : System.out.println("Has elegido vino tinto para Beber");
		break;
		case 4 : System.out.println("Has elegido piña colada para Beber");
		break;
		
		
		
		}
		
        System.out.println("¿Que deseas como Postre?");
		System.out.println("Como primera Bebida tenemos: \n1.- Flan  $25 \n2.- Rebanada de pastel $30 \n3.- Rebanada de pay $35 Botella \n4.- Gelatina de mosaico $15");//IMPRIMIMOS LAS OPCIONES DEL MENU
		int opcionPostre = teclado.nextInt(); //INTRODUCIMOS POR TECLADO QUE OPCION QUEREMOS
		
        switch(opcionPostre) {
		
		case 1 : System.out.println("Has elegido flan para postre"); //PONEMOS CADA UNO DE LOS PASOS ELEGIDOS
		break;
		case 2 : System.out.println("Has elegido pastel para postre");
		break;
		case 3 : System.out.println("Has elegido pay para postre");
		break;
		case 4 : System.out.println("Has elegido Gelatina de mosaicopara postre");
		break;
		
		
		
		
	}
        
        System.out.println("Muy bien caballero/señorita, en 10 minutos tiene su Menu. Muchas gracias por elegir nuestro restaurante");
        
  
	}

	/*GRECIA MONTSSERAT PEREYRA CORTES
